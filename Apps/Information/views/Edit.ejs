<!DOCTYPE html>
<html lang="en">
<head>

    <!-- header -->
    <%- include('./partials/header.ejs'); %>

    <title>View Records</title>
</head>
<body>
    
    <div class="container my-4 ">
        <div class="card m-5 p-4 col-10">

            <h3><a href="/Record/<%= info._id %>"><i class="bi bi-caret-left text-secondary"></i></a> Edit Record</h3>
            <hr>

            <form method="post">
                <div class="row">
                    <div class="col">
                        <div class="my-3 text-start">
                            <label class="lead">Full Name</label>
                            <input type="text" value="<%= info.fullName %>" name = "fullName" class="form-control">
                        </div>                            
                    </div>
                    <div class="col">
                       <div class="my-3 text-start">
                           <label class="lead">Date of birth</label>
                           <input type="date" value="<%= info.dateOfBirth %>" name = "dateOfBirth" class="form-control" required>
                       </div>                            
                    </div>
                </div>

                <div class="my-2 text-start">
                    <label class="lead">Gender</label>
                    <div class="row">

                        <div class="col">
                              <div class="form-check">
                                  <input class="form-check-input" type="radio" name="gender" value="Male" id="flexRadioDefault1">
                                  <label class="form-check-label" for="flexRadioDefault1">
                                    Male
                                  </label>
                              </div>                                
                        </div>
                        <div class="col">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="gender" value="Female" id="flexRadioDefault2" checked>
                              <label class="form-check-label" for="flexRadioDefault2">
                                Female
                              </label>
                            </div>                                
                        </div>

                        <div class="col">
                            <div class="form-check">

                                <%
                                 let date = new Date()
                                 let year = date.getFullYear(); 
                                 %>

                                <label class="lead">Age</label>
                              <input class="form-control col-5" type="text" value="<%= info.age %>" name = "age" id="age">
                            </div>                                
                        </div>

                    </div>
                </div>


                <div class="row">
                    <div class="col">
                        <div class="my-3 text-start">
                            <label class="lead">Residence</label>
                            <input type="text" value="<%= info.residence %>" id="residence" name = "residence" class="form-control">
                        </div>
                    </div>

                    <div class="col">
                        <div class="my-3 text-start">
                            <label class="lead">Profession</label>
                            <input type="text" value="<%= info.proffession %>" id="proffession" name = "proffession" class="form-control">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col">       
                        <div class="my-3 text-start">
                            <label class="lead">Email</label>
                            <input type="email" id="email" value="<%= info.email %>" name = "email" class="form-control">
                        </div>
                    </div>

                    <div class="col">
                        <div class="my-3 text-start">
                            <label class="lead">Upload Image</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                    </div>
                </div>


                <div class="my-3 text-start">
                    <label class="lead">Description</label>
                    <textarea class="form-control" name="bio" cols="20" rows="10"></textarea>
                </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary mx-4" data-dismiss="modal">Close</button>
            <button type="submit" id="update" class="btn text-white" >Update</button>
        </div>

            </form>
        </div>
    </div>




</body>
</html>