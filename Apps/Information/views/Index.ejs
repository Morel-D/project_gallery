<!DOCTYPE html>
<html lang="en">


<!-- header -->
    <%- include('./partials/header.ejs'); %>

    <title>Information Storage</title>

<body>

    <div class="container my-4 py-2">
        <div class="card m-5 p-4 ">

            <h3 class="text-secondary">Personal Information</h3>

            <div class="row p-3 text-center">
                <div class="col">
                    <label class="lead"><span class="badge text-white p-2 my-1" id="badge"><%= infos.length %></span> Records</label>
                </div>
                
               
                    
                        <div class="col col-6">
                             <input type="text" class="form-control col-12" id = "search" placeholder="Enter user Name" onkeyup="search(this)">
                        </div>     
        
                     
                         
                
                 


                

                <div class="col col-1">
                        <div class="shadow-sm p-2 mx-1 bg-body rounded">
                            <i class="bi bi-table"></i>
                        </div>
                </div>

                <div class="col col-1">
                    <div class="shadow-sm p-2 mx-1 bg-body rounded">
                        <i class="bi bi-grid"></i>
                    </div>
                </div> 


                <div class="col">
                <!-- Button trigger modal -->
                  <button type="button" class="btn text-white form-control" id="add" data-toggle="modal" data-target="#modelId">
                      Add Record
                  </button>

                    <%- include('./partials/modal.ejs') %>
                    <%- include('./partials/viewModal.ejs') %>
                </div>
            </div>

            <div class="">
                <table class="table">
                    <thead>
                        <tr class="text-secondary">
                            <th><button class="btn btn-none"><i class="bi bi-trash text-danger"></i></button></th>
                            <th>Full Name</th>
                            <th>Date of birth</th>
                            <th>Age</th>
                            <th>Residence</th>
                            <th>Gender</th>
                            <th>Proffession</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="records">

                        <% if(infos.length > 0) {  %>
                            <% infos.forEach(info => { %>
                                <tr>
                                    <td scope="row" class=""> <input type="checkbox" class="mx-3"> </td>
                                    <td><%= info.fullName %></td>
                                    <td><%= info.dateOfBirth %></td>
                                    <td><%= info.age %></td>
                                    <td><%= info.residence %></td>
                                    <td><%= info.gender %></td>
                                    <td><%= info.proffession %></td>
                                    <td><%= info.email %> 
                                        <input type="hidden" id="id" value="/Record/<%= info._id %>">
                                        <input type="hidden" id="editId" value="/<%= info._id %>">
                                    </td>
                                    <td>
                                        <a id="delBtn" href="/"><i class="bi bi-trash text-danger"></i></a>
                                        <a href="/Record/<%= info._id %>" class="mx-3"><i class="bi bi-eye text-warning"></i></a>
                                        <a href="/<%= info._id %>" id="editRecords" data-toggle="modal" data-target="#modelId3"><i class="bi bi-pencil text-primary"></i></a>
                                        
                                    </td>
                                </tr>
                            <% }) %>  
                        <% }else {  %>
                            
                            

                            <tr class="table-borderless">
                                <td colspan="9">
                                    <h4 class="my-3 text-center" id="head">No Single Record has been Input <i class="bi bi-emoji-frown" id="icon"></i> </h4>
                                </td>
                            </tr>
                            
                            <% } %>
                    </tbody>
                </table>

                <div class="">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                          <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                              <span class="sr-only">Previous</span>
                            </a>
                          </li>
                          <li class="page-item"><a class="page-link text-white"  id="pageOne" href="#">1</a></li>
                          <li class="page-item"><a class="page-link" id="textPage" href="#">2</a></li>
                          <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                              <span aria-hidden="true" id="arrow">&raquo;</span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                        </ul>
                      </nav>
                </div>

            </div>
        </div>
    </div>
   
    <script src="../public/Script/script.js"></script>
</body>
</html>